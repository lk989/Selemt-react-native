{
  "expo": {
    "name": "Selemt",
    "slug": "Selemt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-localization",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Selemt to use your location."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Selemt to access your camera",
          "microphonePermission": "Allow Selemt to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ]
  }
}
